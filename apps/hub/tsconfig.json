{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@/providers/*": ["./providers/*"],
      "@/app/*": ["./app/*"],
      "@five-cucumber/sdk": ["../../packages/sdk/src/index.ts"],
      "@five-cucumber/sdk/*": ["../../packages/sdk/src/*"],
      "games/*": ["../../games/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
